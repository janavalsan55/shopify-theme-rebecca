{{ 'banner.css' | asset_url | stylesheet_tag }}

{% style %}

    .banner_img {
        background-image: url("{{ section.settings.banner_background | img_url : 'master' }}");
    }
    

{% endstyle %}


<div class="banner">
    <a href="{{ section.settings.banner_heading_link }}" class="banner_content">
        <div class="banner_img"></div>
    </a>
    <div class="banner_inner_content">
        <a href="{{ section.settings.banner_heading_link }}" class="banner_heading">{{ section.blocks[0].settings.banner_head }}</a>
        <a href="{{ section.blocks[1].settings.banner_description_link }}" class="banner_description">{{ section.blocks[1].settings.banner_des }}</a>
        <button class="banner_button">{{ section.blocks[2].settings.banner_button_text }}</button>
    </div>
</div>


{% schema %}
    {
        "name": "banner",
        "settings": [
            {
                "type": "image_picker",
                "id": "banner_background",
                "label": "Banner image"
            }   
        ],
        "blocks": [
            {
                "type": "banner-heading",
                "name": "Banner heading",
                "settings": [
                    {
                        "type": "text",
                        "id": "banner_head",
                        "label": "Text",
                        "default": "Browse our latest products"
                    },
                    {
                        "type": "url",
                        "id": "banner_heading_link",
                        "label": "Link"
                    }
                ]
            },
            {
                "type": "banner-description",
                "name": "Banner description",
                "settings": [
                    {
                        "type": "text",
                        "id": "banner_des",
                        "label": "Text",
                        "default": "Give customers details about the banner image(s) or content on the template"
                    },
                    {
                        "type": "url",
                        "id": "banner_description_link",
                        "label": "Link"
                    }
                ]
            },
            {
                "type": "banner-button-text",
                "name": "Button",
                "settings": [
                    {
                        "type": "text",
                        "id": "banner_button_text",
                        "label": "Button text",
                        "default": "Shop now"
                    },
                    {
                        "type": "url",
                        "id": "banner_button_link",
                        "label": "Button link"
                    }
                ]
            }
        ],
        "presets": [
            {
                "name": "Image banner"
            }
        ]
    }
    {% endschema %}
       
    