{{ 'header.css'|asset_url|stylesheet_tag }}

{% style %}
  .navbar{
 background-color:{{ section.settings.header_bg }};
 max-width: 100%;
    height: 50px;
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    align-items: center;
    padding-left: 20px;
    padding-right: 20px;
    position: sticky;
    top: 0;
    z-index: 1000; 
 }
 .logo{
  width: {{ section.settings.logo_width }}px;
   height: {{ section.settings.logo_height }}px;
 }
{% endstyle %}
<nav>
  <div class="navbar">
    <button class="menu-button"><span class="material-symbols-outlined">menu</span></button>
    <a href=""> <img src="{{ section.settings.logo | img_url: 'medium' }}" class="logo" alt="Your Logo"></a>
    <ul class="navlinks">
      {% for link in linklists.main-menu.links %}
        <li>
          <a href="{{ link.url }}">{{ link.title }}</a>
          {% if link.links and link.links.size > 0 %}
            <ul class="sub-submenu">
              {% for subSublink in link.links %}
                <li><a href="{{ subSublink.url }}">{{ subSublink.title }}</a></li>
              {% endfor %}
            </ul>
          {% endif %}
        </li>
      {% endfor %}
    </ul>
    <ul class="nav-buttons">
      <li class="nav-btn"><a href="/#"><i class="fa-solid fa-magnifying-glass"></i></a></li>
      <li class="nav-btn"><a href="/#">INR/â‚¹</a></li>
      <li class="nav-btn"><a href="/#"><span class="material-symbols-outlined">person</span></a></li>
      <li class="nav-btn cart"><a href="{{ routes.cart_url }}"><span class="material-symbols-outlined cart-icon">shopping_cart</span></a></li>
    </ul>
  </div>
</nav>




{% schema %}
  {
    "name": "header",
    "settings": [
      {
        "type": "color",
        "id": "header_bg",
        "label": "Background color",
        "default": "#000000"
      },
      {
        "type": "image_picker",
        "id": "logo",
        "label": "Logo"
      },
      {
        "type": "range",
        "id": "logo_width",
        "label": "Logo Width",
        "min": 0,
        "max": 500,
        "step": 10,
        "default": 210, 
        "unit": "px"
      },
      {
        "type": "range",
        "id": "logo_height",
        "label": "Logo Height",
        "min": 0,
        "max": 100,
        "step": 1,
        "default": 14,
        "unit": "px"
      }
    ],
    "presets": [
      {
        "name": "header"
      }
    ]
  }
  
  {% endschema %}
  
  
  

    