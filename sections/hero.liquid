{% style %}
  .hero-content {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    text-align: center;
    color: white;
    z-index: 10;
    display: flex;
    flex-direction: column;
  }
  .video_banner_heading{
    color: white;
     text-decoration: none;
  }
  .video_banner_heading{
    text-decoration: none;
    color: white;
    font-size: 2.5rem;
    margin-bottom: 10px;
  }
  .hero_button{
    text-decoration: none;
    color: white;
    font-size: 1rem;
    position: relative;
    padding-bottom: 2px;
  }
  .hero_button::after {
    content: '';
    position: absolute;
    left: 0;
    bottom: 0;
    width: 100%;
    height: 1px;
    background-color: white;
}
{% endstyle %}


<div class="hero_section" style="width: 100%;
  position: relative;">
  {% assign video_url = section.settings.video_url %}
  {% if video_url != '' %}
    <div class="hero" style=" width: 100%;
      height: 600px;
      overflow: hidden;">
     <a href="{{ block.settings.hero_button_link }}"> <video
        autoplay
        muted
        loop
        style=" position: relative;
        width: 100%;
        height: auto;">
        <source src="{{ video_url }}" type="video/mp4">
      </video></a>
      <div class="hero-content" style="">
        {% for block in section.blocks %}
          {% if block.type == 'hero-heading' %}
              <a href="{{ block.settings.hero_heading_link }}" class="video_banner_heading" style="">{{ block.settings.hero_head }}</a>
          {% endif %}
          {% if block.type == 'hero-button-text' %}
            <span><a class="hero_button"href="{{ block.settings.hero_button_link }}">{{ block.settings.hero_button_text }}</a></span>
          {% endif %}
        {% endfor %}
      </div>
    </div>
  {% endif %}
</div>

{% schema %}
  {
    "name": "Video Banner",
    "settings": [
      {
        "type": "header",
        "content": "Video Settings"
      }, {
        "type": "text",
        "id": "video_url",
        "label": "Video URL",
        "default": "https://cdn.shopify.com/videos/c/o/v/87e9c69894284ac8956599f7e26eb66c.mp4"
      }
    ],
    "blocks": [
      {
        "type": "hero-heading",
        "name": "Banner Heading",
        "settings": [
          {
            "type": "text",
            "id": "hero_head",
            "label": "Text",
            "default": "Browse our latest products"
          }, {
            "type": "url",
            "id": "hero_heading_link",
            "label": "Link"
          }
        ]
      }, {
        "type": "hero-button-text",
        "name": "Button",
        "settings": [
          {
            "type": "text",
            "id": "hero_button_text",
            "label": "Button Text",
            "default": "Shop Now"
          }, {
            "type": "url",
            "id": "hero_button_link",
            "label": "Button Link"
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "Vedio Banner",
        "category": "Custom"
      }
    ]
  }
{% endschema %}